{
    "name": "npmweb/redirector",
    "description": "Redirector",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@bitbucket.org:npmweb/laravel-base"
        },
        {
            "type": "vcs",
            "url": "git@github.com:npmweb/php-env-loader"
        },
        {
            "type": "vcs",
            "url": "git@github.com:npmweb/php-helpers"
        }
    ],
    "require": {
        "laravel/framework": "5.0.*",
        "npmweb/laravel-base": "dev-master@dev",
        "npmweb/php-env-loader": "dev-master@dev",
        "npmweb/php-helpers": "dev-master@dev",
        "laravelcollective/html": "~5.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "NpmWeb\\": "app/src/NpmWeb",
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    }
}